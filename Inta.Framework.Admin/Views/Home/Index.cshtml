
@{
    ViewBag.Title = "Index";
}

@{
    Inta.Framework.Web.Manager.CategoryManager category = new Inta.Framework.Web.Manager.CategoryManager();

    foreach (var item in category.Find(0).ToList())
    {
        <a href="@item.CategoryFullUrl">@item.CategoryName</a>
        <ul>
            @foreach (var submenu in item.Items)
            {
                <li><a href="@submenu.CategoryFullUrl">@submenu.CategoryName</a></li>

            }
        </ul>

    }


    Inta.Framework.Web.Manager.BannerManager banner = new Inta.Framework.Web.Manager.BannerManager();
    var bannerResult = banner.Find(76864);
    foreach (var item in bannerResult)
    {
        @item.Name
        <img src="~/Uploads/Image/@item.Image" />
    }
    <br />

    Inta.Framework.Web.Manager.ContactInformationManager contact = new Inta.Framework.Web.Manager.ContactInformationManager();
    var contactResult = contact.Find();
    foreach (var item in contactResult)
    {
        @item.Name
        <br />
        @item.Phone
    }
    <br />
    Inta.Framework.Web.Manager.RecordManager record = new Inta.Framework.Web.Manager.RecordManager();
    var recordResult = record.Find();
    foreach (var item in recordResult)
    {
        @item.Name
        <br />
        @Html.Raw(item.ShortContent)

    }

    Inta.Framework.Web.Manager.RecordImageManager recordImage = new Inta.Framework.Web.Manager.RecordImageManager();
    var recordImageResult = recordImage.Find(8106);
    foreach (var item in recordImageResult)
    {
        @item.Name
        <img src="~/Uploads/Image/@item.ImageName" />

    }

    Inta.Framework.Web.Manager.RecordFileManager recordFile = new Inta.Framework.Web.Manager.RecordFileManager();
    var recordFileResult = recordFile.Find(8093);
    foreach (var item in recordFileResult)
    {
        @item.Name

    }
}
