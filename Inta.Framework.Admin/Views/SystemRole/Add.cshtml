@model Inta.Framework.Entity.SystemRole
@{
    ViewBag.Title = "Add";

    List<SystemMenu> menuList = (List<SystemMenu>)ViewBag.menuList;
    List<SystemAction> actionList = (List<SystemAction>)ViewBag.actionList;


    List<int> actionRoles = (List<int>)ViewBag.ActionRole;
    List<int> menuRoles = (List<int>)ViewBag.MenuRole;
}

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">

            <h5 class="modal-title" id="exampleModalLabel">Kullanıcı Rolü Ekle / Düzenle</h5>

            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
        <div class="modal-body">
            <div class="popupMessage"></div>
            @Html.HiddenFor(h => h.Id)
            @Html.HiddenFor(h => h.RecordDate)

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">Rol Adı</label>
                    </div><div class="col-lg-9">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control"})

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">Açıklama</label>
                    </div><div class="col-lg-9">
                        @Html.TextBoxFor(m => m.Explanation, new { @class = "form-control"})

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">Menü Seçiniz</label>
                    </div><div class="col-lg-9">
                        <div class="row">

                            @for (int i = 0; i < menuList.Count; i++)
                            {
                                <div class="col-lg-6">
                                    <input type="checkbox" id="menuList[@i]" name="menuList" value="@menuList[i].Id" @(Model.Id > 0 && menuRoles != null && menuRoles.Any(a => a == menuList[i].Id) ? "checked='checked'" : "") />
                                    <label for="menuList[@i]">@menuList[i].Name</label>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">Yetki Seçiniz</label>
                    </div><div class="col-lg-9">
                        <div class="row">

                            @for (int i = 0; i < actionList.Count; i++)
                            {
                                <div class="col-lg-6">
                                    <input type="checkbox" id="actionList[@i]" name="actions" value="@actionList[i].Id" @(Model.Id > 0 && actionRoles != null && actionRoles.Any(a => a == actionList[i].Id) ? "checked='checked'" : "") />
                                    <label for="actionList[@i]">@actionList[i].Description</label>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">Aktif Mi</label>
                    </div><div class="col-lg-9">
                        @Html.CheckBoxFor(m => m.IsActive, new { @checked = "checked" })
                    </div>
                </div>
            </div>

        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-standart" data-dismiss="modal">Kapat</button>
            <button type="submit" id="btnsubmit" class="btn btn-standart">Kaydet</button>
        </div>
    </div>
</div>

