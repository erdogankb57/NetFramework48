@model Inta.Framework.Entity.PageType

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">

            <h5 class="modal-title" id="exampleModalLabel">Banner Ekle / Düzenle</h5>

            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
        <div class="modal-body">
            <div class="popupMessage"></div>
            @Html.HiddenFor(h => h.Id)

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">Kod</label>
                    </div><div class="col-lg-9">
                        @Html.TextBoxFor(m => m.Code, new { @class = "form-control"})

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">Adı</label>
                    </div><div class="col-lg-9">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control"})

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">Controller Name</label>
                    </div><div class="col-lg-9">
                        @Html.TextBoxFor(m => m.ControllerName, new { @class = "form-control" })

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">Action Name</label>
                    </div><div class="col-lg-9">
                        @Html.TextBoxFor(m => m.ActionName, new { @class = "form-control" })

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">View Name</label>
                    </div><div class="col-lg-9">
                        @Html.TextBoxFor(m => m.ViewName, new { @class = "form-control" })

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">Açıklama Aktif mi</label>
                    </div>
                    <div class="col-lg-9">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.IsExplanationEnabled, new { @class = "form-check-input" })

                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">Kısa Açıklama Aktif mi</label>
                    </div>
                    <div class="col-lg-9">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.IsShortExplanationEnabled, new { @class = "form-check-input" })

                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">İçerik Eklenebilir mi</label>
                    </div>
                    <div class="col-lg-9">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.CanContentBeAdded, new { @class = "form-check-input" })

                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">İlk kayıt açılsın mı</label>
                    </div>
                    <div class="col-lg-9">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.IsMenuFirstRecord, new { @class = "form-check-input" })

                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">İlk kategori açılsın mı</label>
                    </div>
                    <div class="col-lg-9">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.IsMenuFirstCategory, new { @class = "form-check-input" })

                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">Sayfalama olsun mu</label>
                    </div>
                    <div class="col-lg-9">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.IsPagingEnabled, new { @class = "form-check-input" })

                        </div>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3">
                        <label for="exampleFormControlInput1">Aktif mi</label>
                    </div>
                    <div class="col-lg-9">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input" })

                        </div>
                    </div>
                </div>
            </div>



        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-standart" data-dismiss="modal">Kapat</button>
            <button type="submit" id="btnsubmit" class="btn btn-standart">Kaydet</button>
        </div>
    </div>
</div>