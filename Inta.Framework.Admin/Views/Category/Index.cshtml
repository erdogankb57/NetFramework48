@{
    ViewBag.Title = "View";
    ViewBag.PageName = "Banner";
}

<div class="form-content">
    <div class="col-lg-12">
        <form id="search">
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">
                        Kategori
                    </div>
                    <div class="col-lg-10">
                        @(Html.CategorySelectBoxFor(Id:0,ObjectId:"CategoryId", ObjectName: "CategoryId", DisplayName:"Name",ValueName:"Id",DefaultText:"Lütfen kategori seçiniz", DefaultValue:""))
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">
                        Banner Adı
                    </div>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="Name" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">
                        Aktif Mi
                    </div>
                    <div class="col-lg-10">
                        @{
                            List<SelectListItem> selectListItems = new List<SelectListItem>();
                            selectListItems.Add(new SelectListItem { Text = "Tümü", Value = "-1" });
                            selectListItems.Add(new SelectListItem { Text = "Aktif", Value = "1" });
                            selectListItems.Add(new SelectListItem { Text = "Pasif", Value = "0" });

                            @Html.DropDownList("IsActive", selectListItems, new { @class = "form-control" });
                        }
                    </div>
                </div>
            </div>

            <div class="form-group">
                <button type="button" id="filterRecord" onclick="SearchDataList()" class="btn btn-standart" data-toggle="modal">
                    Filtrele
                </button>
            </div>
        </form>
    </div>
</div>
<br />
<div class="listMessage">
</div>

<div class="form-content">


    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">

                @{
                    List<PagingDataListColumn> col = new List<PagingDataListColumn>();
                    col.Add(new PagingDataListColumn
                    {
                        Name = "Select",
                        Text = "Seçiniz",
                        Width = 30
                    });
                    col.Add(new PagingDataListColumn
                    {
                        Name = "Id",
                        Text = "Id",
                        Width = 100,
                        Short = true

                    });
                    col.Add(new PagingDataListColumn
                    {
                        Name = "Name",
                        Text = "Ad",
                        Short = true
                    });

                    col.Add(new PagingDataListColumn
                    {
                        Name = "IsActive",
                        Text = "Durum",
                        Width = 100

                    });
                    col.Add(new PagingDataListColumn
                    {
                        Name = "Edit",
                        Text = "Düzenle",
                        Width = 100

                    });
                    col.Add(new PagingDataListColumn
                    {
                        Name = "Delete",
                        Text = "Sil",
                        Width = 100

                    });
                }
                @Html.PagingDataListAndSaveFor(ObjectId: "CategoryList", Header: col, Url: "/Category/GetList", AddUrl: "/Category/Add", isAddPopup: false, DeleteUrl: "/Category/Delete", ActiveUrl: "/Category/Active", PassiveUrl: "/Category/Passive", SaveUrl: "/Category/Save", CallBackFunction: "SearchDataList", PagingRowCount: 20, OrderColumn: "Id", AddCallBackFunction: "AddCallBack")

            </div>
        </div>
    </div>
</div>


@section scripts{
    <script type="text/javascript">
        var SearchDataList = function () {
            $(function () {
                debugger;
                var val = { Name: null, IsActive: true, CategoryId: null };
                if ($("#search #Name").val() != "") {
                    val["Name"] = $("#search #Name").val();
                }
                if ($("#search #IsActive").val() != "") {
                    val["IsActive"] = $("#search #IsActive").val();
                }
                if ($("#search #CategoryId").val() != "") {
                    val["CategoryId"] = $("#search #CategoryId").val();
                }
                $PagingDataList.ReloadData("CategoryList", val);

                $TreeSelectBox.Init();
                $TreeSelectBox.Select();
                $CheckBoxListFilter.Init();

            });
        }

        SearchDataList();
        $("#saveForm").submit(function (e) {
            debugger;
            e.preventDefault();
            $PagingDataList.Save("saveForm", "CategoryList", SearchDataList, AddCallBack);

        });

        function AddCallBack() {
            $TreeSelectBox.Init();
            $TreeSelectBox.Select();

            $CheckBoxListFilter.Init();

            

        }

    </script>


}
